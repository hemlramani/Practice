<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Programming"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:background="#E39F2D"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_marginLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#1B7728"
                android:text="Java"/>

                <TextView
                    android:id="@+id/txt2"
                    android:layout_weight="5"
                    android:layout_width="250dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Java is popular programming languge. Java is used to develop mobile apps, web apps, desktop apps, games and.."/>

                <TextView
                    android:id="@+id/txt3"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#1883CC"
                    android:text="Read More>>"/>
            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>